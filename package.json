{
  "name": "@earthtone/generator",
  "version": "0.1.0",
  "description": "Static Site Generator",
  "main": "index.js",
  "scripts": {
    "pretest": "eslint ./**/*.js",
    "test": "browserify tests/unit/*.test.js | tape-run | tap-spec",
    "compile": "browserify lib/main.js -o js/bundle.js",
    "watch": "nodemon -e js,json,css,md -i dist -i  -x \"npm run compile && build\"",
    "start": "concurrently --kill-others \"npm run watch\" \"live-server dist --watch=js\""
  },
  "bin": {
    "build": "./index.js"
  },
  "author": "earthtone <earthlyillusion@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "browserify": "^14.5.0",
    "concurrently": "^3.5.1",
    "eslint": "^4.14.0",
    "live-server": "^1.2.0",
    "nodemon": "^1.14.6",
    "tap-spec": "^4.1.1",
    "tape": "^4.8.0",
    "tape-run": "^3.0.1"
  },
  "dependencies": {
    "@earthtone/view-class": "^1.1.0",
    "bel": "^5.1.5",
    "chalk": "^2.3.0",
    "fs-extra": "^5.0.0",
    "marked": "^0.3.9"
  }
}
